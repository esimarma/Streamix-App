<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A41"
    tools:context=".fragments.SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Search Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#2A2A55"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="8dp">

            <ImageView
                android:id="@+id/clearSearchButton"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:contentDescription="Clear search"
                android:padding="8dp"
                android:src="@drawable/cruz"
                android:visibility="gone"
                app:tint="#FFFFFF" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="Titulo"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA" />

            <ImageView
                android:id="@+id/filterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="filter icon"
                android:padding="8dp"
                android:src="@drawable/ic_filter"
                app:tint="#FFFFFF" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/moviesButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#8C64A8"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="8dp"
                android:layout_marginEnd="4dp"
                android:text="Filmes"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:drawableStart="@drawable/ic_filter"
                android:drawablePadding="4dp" />

            <Button
                android:id="@+id/tvButton"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#2A2A55"
                android:layout_marginBottom="8dp"
                android:paddingHorizontal="8dp"
                android:layout_marginEnd="4dp"
                android:text="SerÃ­es"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:drawableStart="@drawable/ic_filter"
                android:drawablePadding="4dp" />
        </LinearLayout>
        <!-- Filter Button -->



        <!-- RecyclerView for Movies/Series -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="16dp" />

    </LinearLayout>
</FrameLayout>
