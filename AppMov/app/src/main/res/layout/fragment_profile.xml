<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A41"
    tools:context=".fragments.ProfileFragment">

    <!-- Logged-Out Layout -->
    <LinearLayout
        android:id="@+id/loggedOutLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:padding="16dp">

        <TextView
            android:id="@+id/warningMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oh!"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/informationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/information_message"
            android:textColor="#AAAAAA"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_button"
            android:textColor="#1A1A41"
            android:backgroundTint="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <!-- Logged-In Layout -->
    <LinearLayout
        android:id="@+id/loggedInLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:padding="16dp">

        <!-- Profile Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/profile_black"
                android:contentDescription="User Profile Image"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop" />

            <!-- Name and Edit Button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="killme@gmail.com"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/editUserButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#1A1A41"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Statistics Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statistics_title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Watched Content Table -->
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:background="#6A1B9A"
                    android:stretchColumns="*"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp">

                    <!-- Title Row -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/watched_content_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/watched_content"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="8dp"
                            android:gravity="center"
                            android:layout_gravity="center"/>
                    </TableRow>

                    <!-- Data Row -->
                    <TableRow>

                        <TextView
                            android:id="@+id/series_watched"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X SÃ©ries"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="8dp" />

                        <TextView
                            android:id="@+id/movies_watched"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X Filmes"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:padding="8dp" />
                    </TableRow>
                </TableLayout>

                <!-- Hours Spent Table -->
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:background="#6A1B9A"
                    android:stretchColumns="*"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"/>

                    <!-- Title Row with Calendar Icon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            android:contentDescription="calendar"
                            android:layout_marginEnd="8dp"
                            app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wasted_hours"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>

            <!-- Data Row -->
            <TableRow>
                <TextView
                    android:id="@+id/months_wasted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/days_wasted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="8dp"/>

                <TextView
                    android:id="@+id/hours_wasted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="8dp"/>
            </TableRow>

            <!-- Labels Row -->
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meses"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dias"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horas"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:paddingBottom="8dp"/>
            </TableRow>
        </TableLayout>

                <!-- Community Table (NEW) -->
                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:background="#6A1B9A"
                    android:stretchColumns="*"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp">

                    <!-- Title Row -->
                    <TableRow
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar"
                                android:contentDescription="calendar"
                                android:layout_marginEnd="8dp"
                                app:tint="@android:color/white" />

                            <TextView
                                android:id="@+id/community_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/community"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"/>
                        </LinearLayout>
                    </TableRow>

                    <!-- Data Row -->
                    <TableRow>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="X"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </TableRow>

                    <!-- Labels Row -->
                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/comments"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/reviews"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="@string/average"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:gravity="center" />
                    </TableRow>
                </TableLayout>


            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>
</FrameLayout>
