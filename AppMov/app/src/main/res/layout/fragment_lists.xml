<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A41"
    tools:context=".fragments.ListsFragment">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:padding="16dp">

        <!-- Tabs (Watchlist and Personalized Buttons) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Watchlist Button -->
            <Button
                android:id="@+id/watchlistButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#6A1B9A"
                android:padding="8dp"
                android:text="WatchList"
                android:textColor="#FFFFFF" />

            <!-- Personalized Button -->
            <Button
                android:id="@+id/personalizedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#6A1B9A"
                android:padding="8dp"
                android:text="Personalizadas"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Watchlist Layout -->
        <ScrollView
            android:id="@+id/watchlistLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- "Para Ver" Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/paraVerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Para Ver"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/mostrarMaisParaVer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mostrar mais"
                        android:textSize="12sp"
                        android:backgroundTint="#444444"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- RecyclerView for Para Ver -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/paraVerRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <!-- Repeat for "A Ver" and "Vistos" -->
                <!-- "A Ver" Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/aVerTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A Ver"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/mostrarMaisAVer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mostrar mais"
                        android:textSize="12sp"
                        android:backgroundTint="#444444"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- RecyclerView for A Ver -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/aVerRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <!-- "Vistos" Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/vistosTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vistos"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/mostrarMaisVistos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mostrar mais"
                        android:textSize="12sp"
                        android:backgroundTint="#444444"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- RecyclerView for Vistos -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vistosRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:overScrollMode="never"
                    android:scrollbars="none" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/personalizedLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <!-- Add New List Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/addListButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Add New List"
                    android:src="@drawable/ic_plus"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adicionar Nova Lista"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- Personalized Lists Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personalized Lists"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- RecyclerView for Personalized Lists -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/personalizedRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none" />
        </LinearLayout>


        <!-- Detailed List Layout -->
        <LinearLayout
            android:id="@+id/detailedListLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Back Arrow -->
                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/left_arrow"
                    android:contentDescription="Back"
                    android:tint="#FFFFFF"
                    android:layout_marginEnd="8dp" />

                <!-- List Title -->
                <TextView
                    android:id="@+id/detailedListTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="List Title"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>

            <!-- RecyclerView for Detailed List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detailedRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
